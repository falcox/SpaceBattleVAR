#include <FighterJet.s3d>
#include <MeshFactory.s3d>

class TieFighter: FighterJet {
	TieFighter(meshFactory);
	fireBeam();
};

function TieFighter::TieFighter(meshFactory, lights)
{
	FighterJet::this.init(meshFactory.getFighterMeshes(TIE_TYPE), lights, TIE_TYPE, meshFactory.getBulletMeshes(GREEN_BEAM));
	//TODO: Fix camera offset
	FighterJet::this.setCameraOffset({[10,-60], [2.8,-2.8]});
	lightType = GREEN_LIGHT;
}

function TieFighter::fireBeam(){
	/* calcola la pos iniziale */
	var BeamOffsets = [0,0,2];
	
	FighterJet::this.fireBeam(BeamOffsets);

}